<!DOCTYPE html>
<html>
<head>
  <title>Epikcar</title>
  <%= yield :application_header %>
  <%= csrf_meta_tags %>

  <!-- Outside links -->
  <link href='//fonts.googleapis.com/css?family=Montserrat'
        rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Lato:100,300,400,700'
        rel='stylesheet' type='text/css'>

  <!-- Common Stylesheets -->
  <%= stylesheet_link_tag 'animate' -%>
  <%= stylesheet_link_tag 'font-awesome' -%>

  <!-- Common Javascript -->
  <%= javascript_include_tag 'jquery' -%>
  <%= javascript_include_tag 'analytics' -%>

  <!-- Google Analytics -->
  <!-- We don't async here to make sure our page analytics can fire -->
  <!-- TODO: We can probably write a wrapper for this -->
  <script src='//www.google-analytics.com/analytics.js'></script>
  <script>
    window.ga = window.ga || function(){
      (ga.q=ga.q||[]).push(arguments)
    };
    ga.l=+new Date;
    ga('create', 'UA-XXXX-Y', 'auto');
    ga('set', 'page', window.location.pathname);
    ga('send', 'pageview');
  </script>
  <!-- End Google Analytics -->
</head>
<body>
  <%= yield :application_body %>
  <%= yield :application_footer %>
</body>
</html>

